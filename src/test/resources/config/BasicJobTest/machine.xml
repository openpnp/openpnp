					   <string>NT1</string>
					   <string>NT2</string>
					</compatible-nozzle-tip-ids>
                </nozzle>
            </nozzles>
            <actuators>
                <actuator class="org.openpnp.machine.reference.ReferenceActuator" id="A1" index="0" name="A1">
