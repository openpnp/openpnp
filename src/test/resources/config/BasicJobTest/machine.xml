 <openpnp-machine>
   <machine class="org.openpnp.machine.reference.ReferenceMachine">
      <driver class="org.openpnp.machine.reference.driver.test.TestDriver"/>
      <heads>
        <head class="org.openpnp.machine.reference.ReferenceHead" id="H1">
